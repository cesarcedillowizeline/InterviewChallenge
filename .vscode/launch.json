{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch .NET Core Web API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/API.InterviewChallenge/API.InterviewChallenge/bin/Debug/net8.0/API.InterviewChallenge.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "hotReloadEnabled": true,
      "hotReloadProfile": "aspnetcore"
    }
  ]
}
